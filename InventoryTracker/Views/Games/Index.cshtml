@{
  Layout = "_Layout";
}

@using InventoryTracker.Models;

<h1>Games</h1>

@if (@Model.Count == 0)
{
  <p>Please add an item</p>
}

<ul>
@foreach (Game game in Model)
{
  <li>
      @Html.ActionLink($"{game.GameName}", "Details", new{ id = game.GameId })
  </li>
}
</ul>

<p>@Html.ActionLink("Add new item", "Create")</p>